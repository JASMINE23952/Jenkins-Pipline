pipeline {
    agent any
    
    stages{
        stage('Build'){
            steps{
                sh "mvn clean package"
            }
        }
        stage('Unit and Intergration Test'){
            steps{
                sh 'mvn test'
                sh 'mvn integration-test'
                // this will run the test automation tool
            }
        }
        stage('Code Analysis'){
            steps{
                sh 'mvn checkstyle:checkstyle'
            }
        }
        stage('Security Scan'){
            steps{
                sh 'docker run -t owasp/zap2docker-stable zap-baseline.py -t http://localhost:8080'
            }
        }
        stage('Deploy to Staging'){
            steps{
                sleep (time:10, unit:"SECONDS")
                sh 'eb deploy myapp-staging'
            }
        }
        stage('Integration Tests on Staging'){
            steps{
                sh 'cypress run --config baseUrl=https://staging.myapp.com'
            }
        }
        stage('Deploy to Production'){
            Steps{
                sh 'docker stack deploy -c docker-compose.yml myapp'
            }
        }
    }
}
